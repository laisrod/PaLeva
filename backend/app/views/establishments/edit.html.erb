<% if current_user&.role? %>
  <% content_for :title, "Editar Restaurante" %>

  <div class="container mt-4">
    <div class="card shadow-sm">
      <div class="card-body bg-light">
        <h1 class="card-title text-primary">Editar Restaurante</h1>

        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <%= render "form", establishment: @establishment %>
            
            <div class="mt-3">
              <%= link_to "Voltar", establishments_path, class: 'btn btn-outline-secondary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <p>Você não tem permissão para acessar esta página.</p>
<% end %>