<div class="container mt-4">
  <h2>Nova Porção</h2>

  <%= form_with(url: @dish ? establishment_dish_portions_path(@establishment, @dish) : establishment_drink_portions_path(@establishment, @drink), model: @portion, local: true) do |f| %>

    <% if @portion.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@portion.errors.count, "erro") %> impediram que esta porção fosse salva:</h4>
        <ul>
          <% @portion.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :description, "Descrição" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :price, "Preço" %>
      <%= f.number_field :price, step: "0.01", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Criar Porção", class: "btn btn-primary" %>
    </div>
  <% end %>
</div> 