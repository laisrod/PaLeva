<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Convidar Funcionário</h2>
        </div>
        
        <div class="card-body">
          <%= form_with(model: [@establishment, @employee_invitation], local: true) do |f| %>
            <% if @employee_invitation.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% @employee_invitation.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= f.label :email, "Email do Funcionário" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :cpf, "CPF do Funcionário" %>
              <%= f.text_field :cpf, class: "form-control", required: true %>
            </div>

            <%= f.hidden_field :establishment_id, value: current_user.establishment.id %>

            <div class="text-center">
              <%= f.submit "Enviar Convite", class: "btn btn-primary" %>
            </div>
            <div class="text-center mt-3">
              <%= link_to 'Voltar', establishment_employee_invitations_path(@establishment), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>