<h1>Nova Bebida</h1>

<%= form_with(model: [@establishment, @drink]) do |form| %>
  <% if @drink.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@drink.errors.count, "erro") %> impediram que esta bebida fosse salva:</h2>
      <ul>
        <% @drink.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :alcoholic, "Alcoólica?" %>
    <%= form.check_box :alcoholic %>
  </div>
  <div>
    <%= form.label :calories, "Calorias" %>
    <%= form.number_field :calories %>
  </div>
  <div>
    <%= form.label :photo, "Foto" %>
    <%= form.file_field :photo %>
  </div>
  <div>
    <%= form.submit "Criar Bebida" %>
  </div>
<% end %>
