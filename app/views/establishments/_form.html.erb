<%= form_with(model: establishment) do |form| %>

  <% if establishment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(establishment.errors.count, "error") %> impediram o cadastro:</h2>

      <ul>
        <% establishment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <div>
      <%= form.label :name, 'Nome Fantasia' %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :social_name, 'Razão Social' %>
      <%= form.text_field :social_name %>
    </div>
    <div>
      <%= form.label :cnpj, 'CNPJ' %>
      <%= form.text_field :cnpj %>
    </div>
    <div>
      <%= form.label :full_address, 'Endereço' %>
      <%= form.text_field :full_address %>
    </div>
    <div>
      <%= form.label :city, 'Cidade' %>
      <%= form.text_field :city %>
    </div>
    <div>
      <%= form.label :state, 'Estado' %>
      <%= form.text_field :state %>
    </div>
    <div>
      <%= form.label :postal_code, 'Código Postal' %>
      <%= form.text_field :postal_code %>
    </div>
    <div>
      <%= form.label :email, 'E-mail' %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :phone_number, 'Telefone' %>
      <%= form.telephone_field :phone_number %>
    </div>
    <div class="d-flex gap-3">
      <%= form.submit "Salvar Restaurante", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
