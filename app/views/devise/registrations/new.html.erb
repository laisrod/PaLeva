<h2>Cadastre-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, 'Nome' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Sobrenome' %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :cpf, 'CPF' %><br />
    <%= f.text_field :cpf, autocomplete: "cpf" %>
  </div>

  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %><br />
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> (minimo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "nova senha" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar Senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nova senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
