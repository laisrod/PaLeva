<%= form_with(model: [@establishment, @menu, @menu_item], local: true) do |f| %>
  <% if @menu_item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@menu_item.errors.count, "erro") %> encontrado:</h4>
      <ul>
        <% @menu_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price, "Preço", class: "form-label" %>
    <%= f.number_field :price, class: "form-control", step: "0.01" %>
  </div>

  <div class="mb-3">
    <%= f.label :category, "Categoria", class: "form-label" %>
    <%= f.select :category, 
        MenuItem.categories.keys.map { |k| [k.titleize, k] }, 
        { prompt: "Selecione uma categoria" }, 
        class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", establishment_menu_path(@establishment, @menu), class: "btn btn-secondary" %>
  </div>
<% end %> 